<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andro.heklaton.rsc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="andro.heklaton.rsc.ui.activity.MainActivity"
            android:theme="@style/AppTheme.AppBarOverlay">
        </activity>

        <activity android:name="andro.heklaton.rsc.ui.activity.SettingsActivity" />

        <activity android:name="andro.heklaton.rsc.ui.activity.DetailsActivity"
            android:theme="@style/AppTheme.AppBarOverlay" />

        <activity android:name="andro.heklaton.rsc.ui.activity.SplashActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="andro.heklaton.rsc.ui.activity.LoginActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity android:name=".ui.activity.RegistrationActivity"
            android:theme="@style/AppTheme"
            android:noHistory="true"
            android:windowSoftInputMode="stateAlwaysHidden" />

    </application>

</manifest>
